{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "timezone": "Europe/Lisbon",
  "schedule": [
    "after 11pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ]
}
